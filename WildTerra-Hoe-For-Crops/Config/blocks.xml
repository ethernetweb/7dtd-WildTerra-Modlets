<wtmod>
  <!-- Set collide with hoe instead of melee, punching crops is stupid -->
  <!-- create new material so it is way stronger against anything except the hoe that way the hoe must be used -->
  <set xpath="/blocks/block[@name='cropsGrowingMaster']/property[@name='Collide']/@value">hoe</set>
  <set xpath="/blocks/block[@name='cropsGrowingMaster']/property[@name='Material']/@value">Mcrops</set>
  <set xpath="/blocks/block[@name='cropsHarvestableMaster']/property[@name='Collide']/@value">hoe</set>
  <set xpath="/blocks/block[@name='cropsHarvestableMaster']/property[@name='Material']/@value">Mcrops</set>
<!--  <append xpath="/blocks/block[@name='treeGrassMaster']/property[@name='Collide']/@value">,hoe</append> -->

  <!-- Don't need hoe for these but can use it -->
  <set xpath="/blocks/block[@name='mushroom01']/property[@name='Collide']/@value">melee,hoe</set>
  <set xpath="/blocks/block[@name='mushroom02']/property[@name='Collide']/@value">melee,hoe</set>
  <set xpath="/blocks/block[@name='plantedMushroom1']/property[@name='Collide']/@value">melee,hoe</set>
  <set xpath="/blocks/block[@name='plantedMushroom2']/property[@name='Collide']/@value">melee,hoe</set>
  <set xpath="/blocks/block[@name='plantedMushroom3Harvest']/property[@name='Collide']/@value">melee,hoe</set>

  <!-- test this directly with potatos instead of using extend from Masters to maybe make it work? Nope... -->
  <set xpath="/blocks/block[@name='plantedPotato3Harvest']/property[@name='Material']/@value">Mcrops</set>
  <set xpath="/blocks/block[@name='plantedPotato3HarvestPlayer']/property[@name='Material']/@value">Mcrops</set>
  <set xpath="/blocks/block[@name='plantedPotato3Harvest']/property[@name='Collide']/@value">hoe</set>
  <set xpath="/blocks/block[@name='plantedPotato3HarvestPlayer']/property[@name='Collide']/@value">hoe</set>
</wtmod>
